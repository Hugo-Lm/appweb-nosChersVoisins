

<div class="container">
  <div class ="row">

    <% @products.each do |product| %>

      <div class ="col-12 col-lg-4">
        <div class="card p-3">

          <div class="card-top">
            <img class="profil-picture" src="https://thispersondoesnotexist.com/image" alt="profil picture">
            <div class="user-infos">
              <p class="user-name"><%= User.find(product.user_id).first_name %> </p>
              <p class="user-distance">150m</p>
            </div>
          </div>


          <img class="card-img-top" src="https://images-na.ssl-images-amazon.com/images/I/81iyL9dJtiL._AC_SX466_.jpg" alt="Card image cap">

          <div class="card-bottom">
            <div class="card-title">
              <%= link_to product.name, product_path(product.id) %>
            </div>
            <div class="product-price">
              <p class="price1"> <%= product.price %>â‚¬ </p>
              <p class="price2">/jour</p>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>


