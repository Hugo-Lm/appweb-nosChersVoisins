          </div>
          <div class="owner-profil">
            <img src="https://thispersondoesnotexist.com/image" alt="Owner picture">
            <div class="owner-info">
              <p><%= @product.user.first_name %></p>
              <p>50M away</p>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-3 booking-info">
          <%= simple_form_for [@product, @booking] do |f| %>

            <%= f.input :start_date %>
            <%= f.input :end_date %>
            <%= f.button :submit %>

          <% end %>
        </div>

      </div>

