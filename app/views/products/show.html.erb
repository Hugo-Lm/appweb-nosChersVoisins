      <div class="row">

        <div class="col-12 col-lg-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @product.photo.key, height: 300, width: 400, crop: :fill %>')">
