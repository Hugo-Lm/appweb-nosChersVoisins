<div class="container-form">

<div class="text-form-pdt">

  <div class="form">

<h2>Renseignez votre produit</h2>

    <%= simple_form_for [ @product ] do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :address %>
